{% macro delete_mini(url, message, disabled=false, modal=true) %}
{% if disabled %}
<span class="btn btn-sm btn-danger disabled">
    <i class="glyphicon glyphicon-trash"></i><span>{{ message is empty ? 'sms_facilito.delete'|trans : message }}</span>
</span>
{% else %}
<form action="{{ url }}" method="post" novalidate>
    <input type="hidden" name="_method" value="DELETE">
    <button class="btn-link {% if modal %} btn-confirm{% endif %} " type="submit" question="{{ message }}">
        <a class="red" href="#" data-rel="tooltip" title="{{ 'sms_facilito.delete'|trans }}">
            <i class="icon-trash bigger-130"></i>
        </a>
    </button>
</form>
{% endif %}
{% endmacro %}

