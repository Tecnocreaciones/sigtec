{% trans_default_domain 'TecnocreacionesVzlaGovernmentBundle' %}

{% import 'TecnocreacionesVzlaGovernmentBundle:Template:Developer/Macros/buttons.html.twig' as buttons %}

<hgroup id="main-title" class="thin breadcrumb">
    <h1>
        <a href="{{ path('fos_user_profile_show') }}">{{ 'tecnocreaciones_vzla_government.profile'|trans }}</a>
    </h1>
</hgroup>
    <fieldset class="fieldset">
        <legend class="legend">{{ 'tecnocreaciones_vzla_government.details'|trans }}</legend>
        <p class="inline-label">
            <label class="label">{{ 'tecnocreaciones_vzla_government.profile.username'|trans }}</label>
            {{ user.username }}
        </p>
        <p class="inline-label">
            <label class="label">{{ 'tecnocreaciones_vzla_government.profile.first_name'|trans }}</label>
            {{ user.firstName }}
        </p>
        <p class="inline-label">
            <label class="label">{{ 'tecnocreaciones_vzla_government.profile.last_name'|trans }}</label>
            {{ user.lastName }}
        </p>
        <p class="inline-label">
            <label class="label">{{ 'tecnocreaciones_vzla_government.profile.email'|trans }}</label>
            {{ user.email }}
        </p>
        <p class="inline-label">
            <label class="label">{{ 'sigtec.quantity_companies'|trans }}</label>
            {{ user.companies | length }}
        </p>
        <p class="inline-label">
            <label class="label">{{ 'sigtec.companies'|trans }}</label>
            {% for company in user.companies %}

                {% set separator = '' %}
                {% if loop.last  %}
                    {% set separator = '.' %}
                {% else %}
                    {% set separator = ',' %}
                {% endif %}
                <a href="{{ path('coramer_sigtec_backend_company_show',{id:company.id}) }}" title="{{ company.name }}" >{{ company.rif }}</a>{{ separator }}
            {% endfor %}
        </p>
        <p class="inline-label">
            <label class="label">{{ 'tecnocreaciones_vzla_government.profile.registed_at'|trans }}</label>
            {{ user.createdAt | date('Y-m-d h:i a') }}
        </p>
        <p class="inline-label">
            <label class="label">{{ 'tecnocreaciones_vzla_government.profile.last_login'|trans }}</label>
            {{ user.lastLogin ? user.lastLogin | date('Y-m-d h:i a') : null }}
        </p>
        <p class="inline-label">
            <label class="label">{{ 'tecnocreaciones_vzla_government.profile.groups'|trans }}</label>
            {% for group in user.groups %}
                {{ group }}
            {% endfor %}
        </p>
        
    </fieldset>
<p class="button-height align-right">
    {{ buttons.generic(path('fos_user_change_password'),'tecnocreaciones_vzla_government.profile.update_password'|trans,'icon-card') }}
    {{ buttons.edit(path('fos_user_profile_edit')) }}
</p>