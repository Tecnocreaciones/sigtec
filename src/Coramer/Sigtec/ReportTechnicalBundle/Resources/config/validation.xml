<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Coramer\Sigtec\ReportTechnicalBundle\Entity\ReportTechnical">
        <property name="company">
            <constraint name="NotNull" />
        </property>
    </class>
    <class name="Coramer\Sigtec\ReportTechnicalBundle\Entity\Properties\DescriptionAreaCompany\DetailProductStorage">
        <getter property="coveredAreaValid">
            <constraint name="True">
                <option name="message">sigtec.validators.the_covered_area_must_be_less_than_or_equal_to_the_total_area</option>
            </constraint>
        </getter>
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">
                <value>plant</value>
                <value>dedication</value>
            </option>
            <option name="message">pland ss already exists.</option>
        </constraint>
    </class>
</constraint-mapping>