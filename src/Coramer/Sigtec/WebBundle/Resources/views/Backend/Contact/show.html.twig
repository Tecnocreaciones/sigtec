{% extends 'CoramerSigtecWebBundle:Backend:Common/formLayoutShow.html.twig' %}

{% import 'CoramerSigtecResourceBundle:Macros:buttons.html.twig' as buttons %}

{% block body -%}
    <hgroup id="main-title" class="thin breadcrumb">
        <h1>
            <a href="{{ path('coramer_sigtec_backend_company_index') }}">{{ 'sigtec.company'|trans }}</a>
            <span class="icon-forward"></span>
            <span class="thin"><a href="{{ path('coramer_sigtec_backend_company_show',{id:company_contact.company.id}) }}">{{ company_contact.company.rif }}</a></span>
        </h1>
    </hgroup>
    <fieldset class="fieldset">
        <legend class="legend">{{ 'sigtec.contact'|trans }}</legend>
        <p class="inline-label">
            <label class="label">{{ 'sigtec.company'|trans }}</label>
            <a href="{{ path('coramer_sigtec_backend_company_show',{id:company_contact.company.id}) }}">{{ company_contact.company.rif }}</a>
        </p>
        <p class="inline-label">
            <label class="label">{{ 'sigtec.first_name'|trans }}</label>
            {{ company_contact.firstName }}
        </p>
        <p class="inline-label">
            <label class="label">{{ 'sigtec.last_name'|trans }}</label>
            {{ company_contact.lastName }}
        </p>
        <p class="inline-label">
            <label class="label">{{ 'sigtec.charge'|trans }}</label>
            {{ company_contact.charge }}
        </p>
        <p class="inline-label">
            <label class="label">{{ 'sigtec.created_at'|trans }}</label>
            {{ company_contact.createdAt|date('Y-m-d h:i a') }}
        </p>
        <p class="inline-label">
            <label class="label">{{ 'sigtec.updated_at'|trans }}</label>
            {{ company_contact.updatedAt|date('Y-m-d h:i a') }}
        </p>
    </fieldset>
    <p class="button-height align-right">
        {{ buttons.edit(path('coramer_sigtec_backend_company_contact_update', { 'id': company_contact.id })) }}
        {{ buttons.delete(path('coramer_sigtec_backend_company_contact_delete', { 'id': company_contact.id })) }}
    </p>
{% endblock %}
