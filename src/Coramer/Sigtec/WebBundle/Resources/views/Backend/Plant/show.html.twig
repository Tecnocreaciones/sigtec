{% extends 'CoramerSigtecWebBundle:Backend:Common/formLayoutShow.html.twig' %}

{% import 'CoramerSigtecResourceBundle:Macros:buttons.html.twig' as buttons %}
{% block body -%}
    <hgroup id="main-title" class="thin breadcrumb">
        <h1>
            <a href="{{ path('coramer_sigtec_company_index') }}">{{ 'sigtec.company'|trans }}</a>
            <span class="icon-forward"></span>
            <span class="thin"><a href="{{ path('coramer_sigtec_company_show',{id:company_plant.company.id}) }}">{{ company_plant.company.rif }}</a></span>
        </h1>
    </hgroup>
    <fieldset class="fieldset">
        <legend class="legend">{{ 'sigtec.plant'|trans }}</legend>

        <p class="inline-label">
            <label class="label">{{ 'sigtec.company'|trans }}</label>
            <a href="{{ path('coramer_sigtec_company_show',{id:company_plant.company.id}) }}">{{ company_plant.company.rif }}</a>
        </p>
        <p class="inline-label">
            <label class="label">{{ 'sigtec.name'|trans }}</label>
            {{ company_plant.name }}
        </p>
        <p class="inline-label">
            <label class="label">{{ 'sigtec.email'|trans }}</label>
            {{ company_plant.email }}
        </p>
        <p class="inline-label">
            <label class="label">{{ 'sigtec.phones'|trans }}</label>
            {% for phone in company_plant.phones %}
                <span class="icon-mobile "></span>&nbsp;{{ phone.number }}<br/>
            {% endfor %}
        </p>
        <p class="inline-label">
            <label class="label">{{ 'sigtec.dedications'|trans }}</label>
            <ul class="bullet-list ">
                {% for dedication in company_plant.dedications %}
                    <li>{{ dedication.description }}</li>
                {% endfor %}
            </ul>
        </p>
        <p class="inline-label">
            <label class="label">{{ 'sigtec.address'|trans }}</label>
            {{ company_plant.address }}
        </p>
        <p class="inline-label">
            <label class="label">{{ 'sigtec.state'|trans }}</label>
            {{ company_plant.state.description }}
        </p>
        <p class="inline-label">
            <label class="label">{{ 'sigtec.city'|trans }}</label>
            {{ company_plant.city.description }}
        </p>
        <p class="inline-label">
            <label class="label">{{ 'sigtec.created_at'|trans }}</label>
            {{ company_plant.createdAt|date('Y-m-d h:i a') }}
        </p>
        <p class="inline-label">
            <label class="label">{{ 'sigtec.updated_at'|trans }}</label>
            {{ company_plant.updatedAt|date('Y-m-d h:i a') }}
        </p>
    </fieldset>
    <p class="button-height align-right">
        {{ buttons.edit(path('coramer_sigtec_company_plant_update', { 'id': company_plant.id })) }}
        {{ buttons.delete(path('coramer_sigtec_company_plant_delete', { 'id': company_plant.id })) }}
    </p>
{% endblock %}
