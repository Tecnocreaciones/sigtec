            <th>{{ 'sigtec.table.header.product'|trans }}</th>
            <th>{{ 'sigtec.table.header.base_polymer'|trans }}</th>
            <th>{{ 'sigtec.table.header.mark'|trans }}</th> 
            <th>&nbsp;</th>
        </tr>
