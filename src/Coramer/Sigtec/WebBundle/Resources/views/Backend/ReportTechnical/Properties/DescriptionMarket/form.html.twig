{% trans_default_domain 'CoramerSigtecReportTechnicalBundle' %}

<form id="form_pop_up" method="POST" action="[[ reportTechnicalHelper.form.action.url ]]">
<fieldset class="fieldset fields-list">
    <legend class="legend">{{ 'sigtec.description_of_the_market.description_of_the_market'|trans }}</legend>
    <div class="field-block button-height">
        {{ form_label(form.product) }}
        {{ form_widget(form.product) }}
        <span class="info-spot on-left">
            <span class="icon-info-round"></span>
            <span class="info-bubble">
                {{ 'sigtec.help.description_of_the_market.product'|trans({},'help') }}
            </span>
        </span>
        {{ form_errors(form.product) }}
    </div>
    <div class="field-block button-height">
        {{ form_label(form.segment) }}
        {{ form_widget(form.segment) }}
        <span class="info-spot">
            <span class="icon-info-round"></span>
            <span class="info-bubble">
                {{ 'sigtec.help.description_of_the_market.segment'|trans({},'help') }}
            </span>
        </span>
        {{ form_errors(form.segment) }}
    </div>
    <div class="field-block button-height">
        {{ form_label(form.subSegment) }}
        {{ form_widget(form.subSegment) }}
        <span class="info-spot">
            <span class="icon-info-round"></span>
            <span class="info-bubble">
                {{ 'sigtec.help.description_of_the_market.sub_segment'|trans({},'help') }}
            </span>
        </span>
        {{ form_errors(form.subSegment) }}
    </div>
    <div class="field-block button-height">
        {{ form_label(form.participationRate) }}
        {{ form_widget(form.participationRate) }}
        <span class="info-spot">
            <span class="icon-info-round"></span>
            <span class="info-bubble">
                {{ 'sigtec.help.description_of_the_market.participation_rate'|trans({},'help') }}
            </span>
        </span>
        {{ form_errors(form.participationRate) }}
    </div>
    <div class="field-block button-height">
        {{ form_label(form.requirement) }}
        {{ form_widget(form.requirement) }}
        <span class="info-spot on-left">
            <span class="icon-info-round"></span>
            <span class="info-bubble">
                {{ 'sigtec.help.description_of_the_market.requirement'|trans({},'help') }}
            </span>
        </span>
        {{ form_errors(form.requirement) }}
    </div>
</fieldset>
{{ form_rest(form) }}
</form>
<script>
    jQuery('#form_pop_up').validationEngine({showOneMessage:true});
</script>