{% import 'TecnocreacionesVzlaGovernmentBundle:Template:Developer/Macros/actions.html.twig' as actions %}

<fieldset class="fieldset fields-list">

    <legend class="legend">{{ 'sigtec.company'|trans }}</legend>

    <div class="field-block button-height">
        {{ form_label(form.rif) }}
        {{ form_widget(form.rif) }}
        <span class="info-spot">
            <span class="icon-info-round"></span>
            <span class="info-bubble">
                {{ 'sigtec.help.company.rif' | trans({},'help') }}
            </span>
        </span>
        {{ form_errors(form.rif) }}
    </div>
    <div class="field-block button-height">
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
        {{ form_errors(form.name) }}
    </div>
    <div class="field-block button-height">
        {{ form_label(form.websiteAddress) }}
        {{ form_widget(form.websiteAddress) }}
         <span class="info-spot">
            <span class="icon-info-round"></span>
            <span class="info-bubble">
                {{ 'sigtec.help.company.website_address' | trans({},'help') }}
            </span>
        </span>
        {{ form_errors(form.websiteAddress) }}
    </div>
    <div class="field-drop button-height black-inputs">
        {{ form_label(form.status) }}
        {{ form_widget(form.status,{'attr':{'data-text-on':('sigtec.active'|trans|upper),'data-text-off':('sigtec.inactive'|trans|upper)}}) }}
        {{ form_errors(form.status) }}
    </div>
    {% if action == 'create' %}
        {{ actions.create() }}
    {% elseif action == 'update' %}
        {{ actions.update() }}
    {% endif %}
    {{ form_rest(form) }}
</fieldset>